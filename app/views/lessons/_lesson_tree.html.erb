<div class="lesson-tree">
  <% @root_lessons.each do |l| %>
    <%= render partial: "lesson_tree_node", locals: {lesson: l, depth: 0, editable: editable} %>
  <% end%>
  <% if editable %>
    <div class="text-info" style="opacity: <%= level_opacity(0) %>;"><i class="fa fa-plus"></i> Add Root Lesson</div>
  <% end %>
</div>