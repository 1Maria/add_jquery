<div class="row">
  <div class="span6">
    <h2>All Lessons</h2>
  </div>
  <div class="span6 vertical-middle">
    <div class="pull-right"><%= link_to '+ New Lesson', new_lesson_path, class: "btn btn-success list-page-new-button" %></div>
  </div>
</div>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Course</th>
      <th>Date</th>
      <th>Time</th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td style="color: <%= lesson.course_color %>;"><%= lesson.course.code_and_name %></td>
        <td><%= date_abbreviation(lesson.held_at) %></td>
        <td><%= time_abbreviation(lesson.held_at) %></td>
        <td><%= lesson.name %></td>
        <td><%= link_to 'Edit', edit_lesson_path(lesson), class: "btn btn-mini" %>
            <%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-mini btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
