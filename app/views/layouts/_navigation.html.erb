<%= link_to '<i class="icon-book"></i> Courses'.html_safe, '/', :class => 'brand' %>
<ul class="nav pull-right">
  <% if user_signed_in? %>
    <% if current_user.admin %>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          Admin
          <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to('Users', users_path) %></li>
        </ul>
      </li>
    <% end %>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <%= current_user.full_name %>
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to("My Profile", edit_user_path(current_user))  %></li>
        <li><%= link_to("Change Password", edit_user_registration_path(current_user))  %></li>
        <li><%= link_to('Sign out', destroy_user_session_path, method: :delete)  %></li>
      </ul>
    </li>
  <% else %>
    <li><%= link_to('Sign in', user_session_path)  %></li>
    <li><%= link_to('Sign up', new_user_registration_path)  %></li>
  <% end %>
</ul>